                  <%= link_to ( image_tag image.uploaded_file.url(:thumb)), drone_path(drone) %>
                  <% preview_image = true %>
                <%end%>
              <%end%> -->
            <% rescue NoMethodError %>
              <%= link_to ( image_tag("x_red.png")), drone_path(drone) %>
            <%end%>
          <% else %>
            <%= link_to ( image_tag("x_red.png")), drone_path(drone) %>
          <%end%>
        <h3><%=truncate(drone.title, :length => 25)%></h3>

        </div>
        <% end %>

